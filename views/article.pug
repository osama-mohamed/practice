extends layout

block content
    h1 #{article.title}
    br
    h5 written by: #{author}
    p Created in: #{article.created.toString().slice(0, 25)}
    if article.updated
        p Updated in: #{article.updated.toString().slice(0, 25)}
    br
    br
    p #{article.body}
    hr
    if user
        if user._id == article.author
            a.btn.btn-warning(href="/articles/edit/" + article._id) Edit
            span &emsp;
            a.btn.btn-danger.delete-article(href="#", data-id=article._id, data-title=article.title) Delete
