<body>
    <div class="container">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    {{#if user }}
                        <li role="presentation"><a href="/">Dashboard</a></li>
                        <li role="presentation"><a href="/users/logout">Logout</a></li>
                    {{/if }}
                    {{#unless user }}
                        <li role="presentation"><a href="/users/register">Register</a></li>
                        <li role="presentation"><a href="/users/login">Login</a></li>
                    {{/unless }}
                </ul>
            </nav>
            <h3 class="text-muted">Passport Auth</h3>
        </div>


        <div class="row">
            <div class="col-lg-12">
                {{#if success_msg }}
                    <div class="alert alert-success alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{ success_msg }}
                    </div>
                {{/if }}
                
                {{#if error_msg }}
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{ error_msg }}
                    </div>
                {{/if }}
                
                {{#if error }}
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{ error }}
                    </div>
                {{/if }}


                {{{ body }}}
            </div>
        </div>

        <footer class="footer">
            <p>Developed By : <a href="https://www.osamamohamed.com" target="_blank">OSAMA MOHAMED</a>&emsp; &copy; 2018</p>
        </footer>

    </div> <!-- /container -->


