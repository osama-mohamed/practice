extends layout

block content
    h1 #{title}
    ul.list-group
        each article, index in articles
            li.list-group-item
                a(href="/articles/" + article._id)= article.title
                if user
                    if user._id == article.author
                        span &emsp;
                        a.btn.btn-warning(href="/articles/edit/" + article._id) Edit 
                        span &emsp;
                        a.btn.btn-danger.delete-article(href="#", data-id=article._id, data-title=article.title) Delete
